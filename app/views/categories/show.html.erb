<h1><%= @category.name %></h1>
<div class="panel panel-default">
  <div class="panel-heading"><%= @category.description %></div>
  <div class="panel-body">
    <div id='products'>
			<% @category.products.published.each do |product| %>
				<%= render :partial => '/product-tile', :locals => { :product => product } %>
			<% end %>
		</div>
		<div style="clear:both"></div>
  </div>
</div>